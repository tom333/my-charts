{{- if not .Values.mlflow.flaskServerSecretKey }}
---
apiVersion: v1
kind: Secret
metadata:
  name: {{ .Release.Name }}-mlflow-flask-server-secret-key
  namespace: {{ .Release.Namespace }}
  labels:
    app.kubernetes.io/name: mlflow
    app.kubernetes.io/instance: {{ .Release.Name }}
    app.kubernetes.io/component: mlflow
    app.kubernetes.io/managed-by: {{ .Release.Service }}
type: Opaque
stringData:
  MLFLOW_FLASK_SERVER_SECRET_KEY: {{ randAlphaNum 32 | quote }}
{{- end }}

